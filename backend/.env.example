PORT=5000
JWT_SECRET=change-this-jwt-secret

# Free legal search API key (CourtListener):
# Create key at https://www.courtlistener.com/sign-in/ -> Profile -> API Keys
COURTLISTENER_API_KEY=1ff8d8aca818e81d3e65081fc192d019fa88e088

# Optional local LLM via Ollama (OpenAI-compatible):
# https://ollama.com/
OPENAI_API_KEY=ollama
OPENAI_BASE_URL=http://localhost:11434/v1
OPENAI_MODEL=mistral:latest

# If you use standard OpenAI instead, set these:
# OPENAI_API_KEY=your_openai_key
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL=gpt-4o-mini

# Fast-response safety timeout for AI summary call (milliseconds)
LLM_TIMEOUT_MS=8000

# Scraper mode:
# `cheerio` (fast HTML scraping), or `api`.
SCRAPER_PROVIDER=cheerio
SCRAPER_ALLOW_API_FALLBACK=true
CHEERIO_TIMEOUT_MS=10000
CHEERIO_MAX_RESULTS=20
CHEERIO_ENRICH_PDF_COUNT=5

# Fast local audio defaults (recommended)
TTS_EDGE_VOICE=en-US-AriaNeural
TTS_EDGE_RATE=+20%
TTS_EDGE_PITCH=default

# IndicF5 (primary if enabled)
INDICF5_ENABLED=true
INDICF5_PYTHON=python
INDICF5_MODEL_ID=ai4bharat/IndicF5
INDICF5_REPO_DIR=../IndicF5
INDICF5_SCRIPT_PATH=./src/services/tts/indicf5_infer.py
INDICF5_REF_AUDIO_PATH=../IndicF5/prompts/PAN_F_HAPPY_00001.wav
INDICF5_REF_TEXT=bhahampi vich samarkan de bhavan nirmaan kala de verve gunjhaldaar ate hairaan karan vaale han.
INDICF5_DEVICE=auto
INDICF5_SAMPLE_RATE=24000

# Google fallback is enabled by default for environments where Edge TTS is unavailable.
# If your Edge/Piper works reliably, you can set this to false.
TTS_USE_GOOGLE_FALLBACK=true

# Piper TTS is optional.
# If you don't have a Piper model yet, leave PIPER_ENABLED=false (Edge TTS will be used).
PIPER_ENABLED=false
PIPER_PATH=piper
PIPER_MODEL_PATH=
PIPER_CONFIG_PATH=

# Hugging Face token for gated IndicF5 model access
HF_TOKEN=
INDICF5_HF_TOKEN=
INDICF5_FFMPEG_BIN=../tools/ffmpeg/ffmpeg-8.0.1-full_build-shared/bin
